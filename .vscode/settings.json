{
	"files.exclude": {
		".next": true,
		"out": true,
		"**/*.tsbuildinfo": true
	},
	"explorer.fileNesting.patterns": {
		"*package.json": "${capture}.eslint*, ${capture}.prettier*, ${capture}pnpm*, ${capture}turbo*, ${capture}tsconfig.json, ${capture}vite.config.ts, ${capture}vitest.*, ${capture}.gitignore, ${capture}esbuild.*, ${capture}knip.*, ${capture}.nvmrc, ${capture}.cspell.json, ${capture}*.dict.txt, ${capture}*.config.js, ${capture}*.config.mjs",
		"*.js": "${capture}.js.*, ${capture}.d.ts*",
		"*.ts": "${capture}.ts.*, ${capture}.d.ts*, ${capture}.js*, ${capture}.mjs*",
		"*.css": "${capture}.css.*"
	},
	"eslint.runtime": "node",
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "always"
	},
	"eslint.options": {
		"extensions": [
			".js",
			".jsx",
			".md",
			".mdx",
			".ts",
			".tsx"
		]
	},
	"eslint.validate": [
		"markdown",
		"mdx",
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"cSpell.spellCheckOnlyWorkspaceFiles": true,
	"files.associations": {
		"**/.github/**/*.yml": "github-actions-workflow"
	},
	"typescript.tsdk": "node_modules/typescript/lib",
	"[mdx]": {
		"editor.wordWrapColumn": 100,
		"editor.wordWrap": "bounded"
	}
}